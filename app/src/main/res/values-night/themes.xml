<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode. -->
    <style name="Theme.HousePick.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blackVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/iran_yekan_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greyDark</item>
        <item name="colorSecondaryVariant">@color/greyDarker</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blackVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
</resources>
